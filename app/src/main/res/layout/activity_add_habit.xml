<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addHabit"
    android:background="@mipmap/fondoxd">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="403dp"
        android:layout_height="773dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/border_radius"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/staatliches_regular"
            android:text="NUEVO HÃ¡BITO"
            android:textColor="@color/darkblue"
            android:textSize="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="152dp"
            android:ems="10"
            android:hint="Nombre del habito"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="224dp"
            android:ems="10"
            android:hint="Fecha"
            android:inputType="textPassword"
            android:textColorHint="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="288dp"
            android:ems="10"
            android:hint="Hora"
            android:inputType="textPassword"
            android:textColorHint="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="360dp"
            android:ems="10"
            android:hint="Anotaciones extras"
            android:inputType="textPassword"
            android:textColorHint="@color/darkblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="142dp"
            android:layout_height="45dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="444dp"
            android:backgroundTint="@color/darkblue"
            android:text="GUARDAR"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="142dp"
            android:layout_height="199dp"
            android:layout_marginStart="276dp"
            android:layout_marginTop="488dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/gato" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>