<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoxd"
    tools:context=".settings">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Ajustes"
        android:textColor="@color/yellow"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_marginStart="156dp"

        android:layout_marginTop="140dp"
        android:background="@drawable/edit_text_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="P"
        android:textSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        style="@style/borderEditTextLight"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="268dp"
        android:ems="10"
        android:hint="Nombre del habito"
        android:inputType="textEmailAddress"
        android:text="ppdersoli123@gmail.com"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTime"
        style="@style/borderEditText"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="412dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="text"
        android:text="Español (latinoamericano)"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextTextPassword"
        style="@style/borderEditText"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="textPassword"
        android:text="ppdersoli123@gmail.com"
        android:textColor="@color/lightyellow"
        android:textColorHint="@color/lightyellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/logOutsBtn"
        android:layout_width="219dp"
        android:layout_height="47dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="556dp"
        android:backgroundTint="@color/yellow"
        android:text="CERRAR SESIÓN"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveSettingsBtn"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="492dp"
        android:backgroundTint="@color/yellow"
        android:text="MODIFICAR"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="668dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Calendario"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="668dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Inicio"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginTop="668dp"
        android:fontFamily="@font/staatliches_regular"
        android:text="Ajustes"
        android:textColor="@color/yellow"
        android:textSize="24dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="276dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/edit" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="352dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/edit" />


</androidx.constraintlayout.widget.ConstraintLayout>